---
import CourseLayout from '../../../../layouts/CourseLayout.astro';
import MaterialCard from '../../../../components/MaterialCard.astro';
import TagFilter from '../../../../components/TagFilter.astro';
import { getCollection } from 'astro:content';
import { url, collectTags } from '../../../../utils/helpers';
import type { GetStaticPaths } from 'astro';

export const getStaticPaths: GetStaticPaths = async () => {
  const courses = await getCollection('courses');
  return courses.map(course => ({
    params: { course: course.slug },
    props: { course },
  }));
};

const { course } = Astro.props;
const items = (await getCollection('tests', ({ data }) => data.course === course.slug && !data.draft))
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime());
const tags = collectTags(items);
---

<CourseLayout
  title="Tests & Exams"
  courseSlug={course.slug}
  courseTitle={course.data.title}
  courseColor={course.data.color}
  currentSection="tests"
  description={`Past tests and exams for ${course.data.title}.`}
>
  <h1 data-i18n="materials.tests">Tests & Exams</h1>
  <p style="color: var(--color-text-secondary); margin-bottom: var(--space-6);">
    {items.length} <span data-i18n="materials.pastExams">past</span> {items.length === 1 ? 'exam' : 'exams'} <span data-i18n="materials.available">available</span>.
  </p>

  <TagFilter tags={tags} />

  {items.length > 0 ? (
    <div class="material-grid">
      {items.map(item => (
        <MaterialCard
          title={item.data.title}
          href={url(`/courses/${course.slug}/tests/${item.slug}/`)}
          date={item.data.date}
          tags={item.data.tags}
          description={item.data.description}
          pdfLink={item.data.pdfLink}
          solutionsAvailable={item.data.solutionsAvailable}
          solutionsPublic={item.data.solutionsPublic}
          courseColor={course.data.color}
        />
      ))}
    </div>
  ) : (
    <p data-i18n="materials.noTests">No past exams available yet. Check back soon.</p>
  )}
</CourseLayout>
