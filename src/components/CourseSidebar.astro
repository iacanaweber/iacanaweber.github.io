---
import { url, materialTypeLabel } from '../utils/helpers';

interface Props {
  courseSlug: string;
  courseTitle: string;
  courseColor?: string;
  currentSection?: string;
}

const { courseSlug, courseTitle, courseColor = '#2563eb', currentSection } = Astro.props;

const sections = [
  { key: 'overview', label: 'Overview', href: url(`/courses/${courseSlug}/`) },
  { key: 'notes', label: materialTypeLabel('notes'), href: url(`/courses/${courseSlug}/notes/`) },
  { key: 'exercises', label: materialTypeLabel('exercises'), href: url(`/courses/${courseSlug}/exercises/`) },
  { key: 'homework', label: materialTypeLabel('homework'), href: url(`/courses/${courseSlug}/homework/`) },
  { key: 'tests', label: materialTypeLabel('tests'), href: url(`/courses/${courseSlug}/tests/`) },
  { key: 'resources', label: materialTypeLabel('resources'), href: url(`/courses/${courseSlug}/resources/`) },
];
---

<aside class="sidebar" aria-label="Course navigation">
  <div class="sidebar-header" style={`border-color: ${courseColor}`}>
    <h3><a href={url(`/courses/${courseSlug}/`)}>{courseTitle}</a></h3>
  </div>
  <nav>
    <ul class="sidebar-nav">
      {sections.map(({ key, label, href }) => (
        <li>
          <a href={href} class:list={[{ active: currentSection === key }]}>
            {label}
          </a>
        </li>
      ))}
    </ul>
  </nav>
</aside>

<style>
  .sidebar {
    position: sticky;
    top: calc(var(--header-height) + var(--space-4));
    align-self: start;
  }

  .sidebar-header {
    border-left: 4px solid var(--color-primary);
    padding-left: var(--space-3);
    margin-bottom: var(--space-4);
  }

  .sidebar-header h3 {
    font-size: var(--font-size-base);
    margin-bottom: 0;
  }

  .sidebar-header a {
    color: var(--color-text);
    text-decoration: none;
  }

  .sidebar-header a:hover {
    color: var(--color-primary);
  }

  .sidebar-nav {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .sidebar-nav a {
    display: block;
    padding: var(--space-2) var(--space-3);
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
    border-radius: var(--radius-sm);
    text-decoration: none;
    transition: all var(--transition-fast);
  }

  .sidebar-nav a:hover {
    color: var(--color-primary);
    background: var(--color-bg-secondary);
  }

  .sidebar-nav a.active {
    color: var(--color-primary);
    background: var(--color-primary-light);
    font-weight: 600;
  }

  @media (max-width: 768px) {
    .sidebar {
      position: static;
      border-bottom: 1px solid var(--color-border);
      padding-bottom: var(--space-4);
      margin-bottom: var(--space-4);
    }

    .sidebar-nav {
      display: flex;
      flex-wrap: wrap;
      gap: var(--space-1);
    }

    .sidebar-nav a {
      padding: var(--space-1) var(--space-3);
    }
  }
</style>
