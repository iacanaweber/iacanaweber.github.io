    <h2 data-i18n="profile.title">Academic Profiles</h2>
    <div class="profile-grid">
      {links.map(({ href, label, icon }) => (
        <a href={href} target="_blank" rel="noopener" class="profile-card" aria-label={label}>
          <svg class="profile-icon" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
